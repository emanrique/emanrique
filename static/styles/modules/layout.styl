body
html
  margin 0
  padding 0
  height 100%
  min-height 100%
  font-size 16px

#container
  height 100%

#content
  @extends .clearfix

#home
  background url(../images/bg-home.jpg) fixed top center
  width 100%
  height 800px
  
  h2
    color white
    height 300px
    margin-top -93px
    top 50%
    position absolute
    left 20px
    @extends .font-alter
    font-size 3.125em
    width 100%
    text-align center

  span
    display block

  .name
    @extends .font-alter-2

    font-size 2.4em


#menu
  width 100%
  position fixed
  top 0
  background #34495D
  border-bottom 3px solid #2C3E50
  @extends .clearfix
  h1
    float left
    width 200px
  ul
    margin 0
    padding 0
    float right
    width 400px
  li
    display inline-block
    padding 20px 10px
    font-size 1.1em
    @extends .font-normal
    vertical-align middle

  .pi
    height 2em
    background #4EDC8D
    width 1px
    padding 0
    transform rotate(20deg)

  a
    color white
    text-decoration none

    &:hover
      color #99A39F

  .active
    a
      text-decoration underline
      color #99A39F